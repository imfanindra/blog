---
const { title, href, date, type } = Astro.props;

let bubbleColor;

switch (type) {
  case "design":
    bubbleColor = "bg-orange-400";
    break;
  case "updates":
    bubbleColor = "bg-blue-400";
    break;
  case "philosophy":
    bubbleColor = "bg-purple-400";
    break;
  default:
    bubbleColor = "bg-theme-yellow";
    break;
}

const formattedDate = new Date(date).toLocaleDateString("en-GB", {
  day: "2-digit",
  month: "2-digit",
  year: "2-digit"
});
---

<a
  href={href}
  id="list-element"
  class="group flex items-center gap-2 py-1 transition-opacity first-of-type:pt-0 last-of-type:pb-0 hover:!opacity-100">
  <div class="gap-2 truncate">
    <div
      class:list={[
        "mr-2 inline-block h-2 w-2 rounded-full align-middle",
        bubbleColor,
      ]}>
    </div>
    <span class="group-hover:text-[#111111]">
      {title}
    </span>
  </div>
  <div class="h-px flex-grow bg-neutral-300"></div>
  <div class="whitespace-nowrap tabular-nums font-mono text-neutral-400">
    {formattedDate}
  </div>
</a>
